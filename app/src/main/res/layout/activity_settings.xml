<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_coord_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.speedyblur.kretaremastered.SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/settings_auth_type"
            android:textColor="#000"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/setting_security_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginStart="8dp"
            android:checkedButton="@+id/setting_security_none">

            <RadioButton
                android:id="@+id/setting_security_none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/settings_security_none" />

            <RadioButton
                android:id="@+id/setting_security_fingerprint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/settings_security_fingerprint" />

            <RadioButton
                android:id="@+id/setting_security_passcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/settings_security_passcode" />
        </RadioGroup>

        <EditText
            android:id="@+id/setting_passcode_entry"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/setting_security_group"
            android:layout_below="@+id/setting_security_group"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:ems="10"
            android:hint="@string/settings_security_passcode"
            android:inputType="numberPassword"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/setting_passcode_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/setting_passcode_entry"
            android:layout_below="@+id/setting_passcode_entry"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="@string/settings_passcode_status_ready"
            android:visibility="invisible" />

        <Button
            android:id="@+id/setting_passcode_okbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/setting_passcode_entry"
            android:layout_alignTop="@+id/setting_passcode_entry"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/setting_passcode_entry"
            android:text="OK"
            android:visibility="invisible" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
