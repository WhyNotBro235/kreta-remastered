<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/gradeBarTop"
        android:layout_width="4dp"
        android:layout_height="22dp"
        android:layout_marginStart="18dp"
        android:background="@drawable/gradebar_top" />

    <ImageView
        android:id="@+id/gradeBullet"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="28dp"
        app:srcCompat="@drawable/normalgrade" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gradeBarBottom"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/gradeBullet"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/grade"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical"
            android:text="5"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:typeface="normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gradeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blablabla"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/gradeDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="@string/blablabla"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/gradeDesc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="@string/blablabla"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/gradeBarBottom"
        android:layout_width="4dp"
        android:layout_height="24dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="53.5dp"
        android:background="@drawable/gradebar_bottom" />

</RelativeLayout>