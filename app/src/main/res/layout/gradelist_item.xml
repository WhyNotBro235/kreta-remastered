<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/roundrect"
        android:paddingBottom="6dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="6dp"
        android:text="5"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/gradeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/grade"
        android:layout_toEndOf="@+id/grade"
        android:text="@string/blablabla"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/gradeDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blablabla"
        android:textSize="12sp"
        android:layout_below="@+id/gradeTitle"
        android:layout_toEndOf="@+id/grade" />

    <TextView
        android:id="@+id/gradeDesc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blablabla"
        android:textSize="12sp"
        android:layout_below="@+id/gradeDesc"
        android:layout_toEndOf="@+id/grade" />

</RelativeLayout>